<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginStart">@dimen/main_button_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/main_button_margin_end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_corners_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">@dimen/main_button_margin_vertical</item>
    </style>

    <style name="SettingsActivityTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/settings_item_margin_horizontal</item>
        <item name="android:paddingVertical">@dimen/settings_item_padding_vertical</item>
        <item name="android:textColor">@color/color_yp_black_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="PlayerBottomRightText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_yp_black_white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>