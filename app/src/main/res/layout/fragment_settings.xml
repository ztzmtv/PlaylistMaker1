<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.azmetov.playlistmaker.features.settings.ui.fragment.SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/settings_title" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/settings_item_margin_horizontal"
        android:text="@string/settings_dark_theme" />

    <TextView
        android:id="@+id/share_text_view"
        style="@style/SettingsActivityTextViewStyle"
        android:text="@string/settings_share_app"
        app:drawableEndCompat="@drawable/share" />

    <TextView
        android:id="@+id/support_text_view"
        style="@style/SettingsActivityTextViewStyle"
        android:text="@string/settings_write_support"
        app:drawableEndCompat="@drawable/support" />

    <TextView
        android:id="@+id/agreement_text_view"
        style="@style/SettingsActivityTextViewStyle"
        android:text="@string/settings_user_agreement"
        app:drawableEndCompat="@drawable/arrow_forward" />

</LinearLayout>